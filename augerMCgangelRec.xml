<Request>
  <Project name="clas12"/>
  <Track name="analysis"/>
  <Name name="dihbsa"/>

<!-- sample XML Files in /u/group/hps/production/ -->

  <List name="hipoFile">
MCDIS_632_OldLund.hipo
MC_DIS_DNP19_2.hipo
MC_DIS_DNP19_3.hipo
MC_DIS_DNP19_4.hipo
MC_DIS_DNP19_6.hipo
MC_DIS_DNP19_7.hipo
MC_DIS_DNP19_8.hipo
  </List>


  <Variable name="hipoDir" value="/w/hallb-scifs17exp/clas12/gangel/Simu_DNP19/T-1.00_S-1.0/F18" />
  <Variable name="workDir" value="/w/hallb-scifs17exp/clas12/users/dilks/dihbsa" />
  <Variable name="volDir" value="/volatile/clas12/users/dilks" />
  <Variable name="homeDir" value="/u/home/dilks" />

  <ForEach list="hipoFile">
    <Job>
      <TimeLimit unit="minutes" time="240" />
      <DiskSpace space="4" unit="GB" />
      <Memory space="3" unit="GB" />


      <Input src="file:${homeDir}/environment.csh" dest="environment.csh"/>
      <Input src="file:${hipoDir}/${hipoFile}" dest="infile.hipo" copyOption="link"/>
      <Input src="file:${workDir}/analysis.exe" dest="analysis.exe" copyOption="link"/>
      <Input src="file:${workDir}/libDihBsa.so" dest="libDihBsa.so" copyOption="link"/>
      <Input src="file:${workDir}/src/DihBsaDict_rdict.pcm" dest="DihBsaDict_rdict.pcm" copyOption="link"/>

      <!-- <Input src="file:${volDir}/outroot.MC.gen/${hipoFile}.root" dest="genfile.root" copyOption="link"/> -->

      <Command><![CDATA[
        ls -lh
        analysis.exe infile.hipo 1
        ls -lh
      ]]></Command>

      <Output dest="${volDir}/outroot/${hipoFile}.root" src="outroot.root"/>

      <Stdout dest="${workDir}/logfiles/${hipoFile}.out"/>
      <Stderr dest="${workDir}/logfiles/${hipoFile}.err"/>
    </Job>
  </ForEach>

</Request>
